<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Enable support for JPA annotations -->
    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor"/>

    <!-- c3p0 database connection pool management -->
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">

        <property targetName="driverClass" value="com.mysql.cj.jdbc.Driver"/>
        <property targetName="jdbcUrl" value="jdbc:mysql://${prod.jdbc.host}/${prod.jdbc.database}?useSSL=false"/>
        <property targetName="user" value="${prod.jdbc.username}"/>
        <property targetName="password" value="${prod.jdbc.password}"/>

        <!-- c3p0 database connection pool management properties -->
        <property targetName="minPoolSize" value="${pool.min}"/>
        <property targetName="maxPoolSize" value="${pool.max}"/>
        <property targetName="acquireIncrement" value="1"/>
        <property targetName="maxStatements" value="0"/>

        <!-- destroy idle pool after 300ms -->
        <property targetName="idleConnectionTestPeriod" value="300"/>

        <!-- destroy db connection if it fails to login after 7200ms -->
        <property targetName="loginTimeout" value="7200"/>

    </bean>

    <bean id="emFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">

        <property targetName="dataSource" ref="dataSource"/>
        <property targetName="packagesToScan" value="org.academiadecodigo"/>
        <property targetName="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter"/>
        </property>
        <property targetName="jpaProperties">
            <map>
                <entry key="hibernate.show_sql" value="${prod.debug}" />
                <entry key="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
                <!-- Run as create once to initialize the schema -->
                <entry key="hibernate.hbm2ddl.auto" value="create"/>
            </map>
        </property>
    </bean>

</beans>